# Premium Subscription Environment Variables
# Add these to your .env.local or .env file

# ==================== STRIPE CONFIGURATION ====================

# Stripe API Keys (get from https://dashboard.stripe.com/apikeys)
STRIPE_API_SECRET_KEY=sk_test_your_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Stripe Webhook Secret (get from https://dashboard.stripe.com/webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs for subscription plans
# Create these in Stripe dashboard under Products > Prices
# Format: price_1xxxxxxxxxxxxxxxxxx

# Pro Plan
STRIPE_PRICE_ID_PRO_MONTHLY=price_1abc123monthly
STRIPE_PRICE_ID_PRO_YEARLY=price_1abc123yearly

# Premium Plan
STRIPE_PRICE_ID_PREMIUM_MONTHLY=price_2def456monthly
STRIPE_PRICE_ID_PREMIUM_YEARLY=price_2def456yearly

# Elite Plan
STRIPE_PRICE_ID_ELITE_MONTHLY=price_3ghi789monthly
STRIPE_PRICE_ID_ELITE_YEARLY=price_3ghi789yearly

# ==================== CRYPTOCURRENCY CONFIGURATION ====================

# Network Configuration
NEXT_PUBLIC_CHAIN_ID=11155111  # Sepolia testnet
NEXT_PUBLIC_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Smart Contract Addresses (after deployment)
NEXT_PUBLIC_BYTE_TOKEN_ADDRESS=0x...  # ByteToken contract address
NEXT_PUBLIC_SHOP_WALLET_ADDRESS=0x...  # Wallet to receive payments

# For contract deployment (keep private)
PRIVATE_KEY=your_wallet_private_key  # Used only for deployment

# ==================== APPLICATION CONFIGURATION ====================

# App URL (used for payment callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000  # Change to your domain in production
